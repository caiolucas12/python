def quadrado(lado: float) -> float:
    area1 = lado ** 2
    return area1 
'''Calcula a área do quadrado'''
def retangulo(base: float, altura: float) -> float:
    area2 = base * altura
    return area2 
'''Calcula a área do retangulo'''
def triangulo(base: float, altura: float) -> float:
    area3 = (base * altura)/2
    return area3
'''Calcula a área do triangulo'''
def trapezio(base_menor: float, base_maior: float , altura: float) -> float:
    area4 = ((base_maior + base_menor) * altura)/2
    return area4
'''Calcula a área do trapezio''' 
def paralelogramo(base: float, altura: float) -> float:
    area5 = base * altura
    return area5
'''Calcula a área do paralelogramo'''
def losango(diagonal_maior: float, diagonal_menor: float) -> float:
    area6 = (diagonal_maior * diagonal_menor)/2
    return area6
'''Calcula a área do losango'''
def circulo(raio: float) -> float:
    area7 = (raio ** 2) * 3.14159
    return area7 
'''Calcula a área do circulo'''

