num = 0 

while True:
    print('A - Aumentar')
    print('D - Diminuir')
    print('S - Sair')

    codigo = input('Informe o código: ')
    if codigo == 'A':
        num += 1
    elif codigo == 'D':
        num -= 1
    elif codigo == 'S':
        break
    else:
        print('Código Invalido')
print('Valor final:', num)